@model Hospital.Models.SetupOtherDiscountModel

@{
    ViewBag.Title = "Other Discount";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-info">
        @TempData["success"]
    </div>
}

<h2 style="text-align: center;">Setup Other Discount</h2>

<div class="contentWrapper">

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @id = "linkNewBack" })
    </p>



    <div class="general-box clearfix">
        <div class="general-box clearfix">

            <div class="boxWrapper">
                <div class="boxHeadingPanel">
                    <h1>Other Discount</h1>
                </div>

                <table class="table table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountPercentage) <span></span>
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            @*<th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>*@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.SetupOtherDiscountList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscountName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscountPercentage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                @* <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>*@
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DiscountID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.DiscountID }) |*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.DiscountID }, new { onclick = "return conform('Are you sure want to delete?');" })*@

                                    @Html.ActionLink("Delete", "Delete", new { id = item.DiscountID }, new { onclick = "return confirm('Do you want to delete?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @*for sorting *@

            <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>

            @*---------------*@
        </div>
    </div>
</div>
