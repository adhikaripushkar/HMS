@{
    ViewBag.Title = "Role Listing";
    Layout = "~/Views/Shared/_SecurityModelLayout.cshtml";
    
}

<h2 style="text-align:center">Create and Add Users Roles</h2>

<div class="contentWrapper">


<div class="spacerBody">
   <span id="linkNewBack"> @Html.ActionLink("Create New Role", "RoleCreate") | @Html.ActionLink("Add Role to User", "RoleAddToUser")</span>
    
    <br /><br />




  <div class="general-box clearfix">
        <div class="general-box clearfix">

       <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>User Roles</h1></div>

<table class="table table-hover tablesorter">
        <thead>
            <tr>
                <th>User Types</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
           
        @foreach (string s in Model)
        {
 <tr>
            <td> @s</td>
            <td> <div style="float:left;width:100px;height:20px;">
                    <span onclick="return confirm('Are you sure to delete?')">
                        <a href="/Security/RoleDelete?RoleName=@s" class="delLink">Delete
                            @*<img src="~/Images/cross.png" />Delete</a>*@
                    </span>
                </div></td>
            </tr>

        }

        
        </tbody>



    </table>

           </div>

              @*for sorting *@
        
               <div class="boxFooter">
                   
                   <div id="pager" style="">
            <form>
            <img src="@Url.Content("~/Content/images/first.png")" class="first" />
            <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
            <input class="pagedisplay" type="text" style="width:60px;height:24px;">
            <img src="@Url.Content("~/Content/images/next.png")" class="next" />
            <img src="@Url.Content("~/Content/images/last.png")" class="last" />
            <select class="pagesize valid" style="width:70px;height:30px;"">
                <option selected="selected" value="10">10</option>
                <option value="5">5</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
            </select>
            </form>
            </div>

               </div> 

