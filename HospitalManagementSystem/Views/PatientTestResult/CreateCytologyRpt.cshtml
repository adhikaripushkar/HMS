                    </div>

                </label>
                <label>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.WardOrOpd)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.WardOrOpd)
                        @Html.ValidationMessageFor(model => model.WardOrOpd)
                    </div>

                </label>

            </div>


            <div class="row-fluid singleline">

                <label>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.DateOfReceipt)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.DateOfReceipt, new { @Value = DateTime.Now.ToShortDateString() })
                        @Html.ValidationMessageFor(model => model.DateOfReceipt)
                    </div>

                </label>


                <label>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.DateOfDispatch)
                    </div>
                    <div class="editor-field">
