            }


            <div class="row-fluid singleline">

                <label>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.CytopathNo)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.CytopathNo)
                        @Html.ValidationMessageFor(model => model.CytopathNo)
                    </div>

                </label>

                <label>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.RefDocId)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.RefDocId, Hospital.Utility.GetDoctors())
                        @Html.ValidationMessageFor(model => model.RefDocId)
                    </div>

                </label>

                <label>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.RegId)
                    </div>
