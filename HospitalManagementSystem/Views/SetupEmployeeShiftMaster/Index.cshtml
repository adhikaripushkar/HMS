@model Hospital.Models.SetupEmployeeShiftMasterModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PayrollLayout.cshtml";
}

<h2 style="text-align:center;">Setup Employee Shift</h2>

@if (TempData["success"] == "Record Created Successfully !")
{ 
    <div class="alert alert-success">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Creation Failed !")
{ 
    <div class="alert alert-error">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Updated Successfully !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Updation Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

 

@if (TempData["success"] == "Record Deleted Successfully !")
{ 
    <div class="alert alert-info">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Deletion Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

<div class="contentWrapper">
<p>
    @Html.ActionLink("Create New", "Create", null, new { @id="linkNewBack"})
</p>
<div class="general-box clearfix">
        <div class="general-box clearfix">
            <div class="boxWrapper">
                <div class="boxHeadingPanel"><h1>Shift List</h1></div>
<table class="table table-hover tablesorter">
      <thead>
    <tr>
       
            @Html.HiddenFor(model => model.EmployeeShiftMasterId)

        <th>
            @Html.DisplayNameFor(model => model.EmployeeShiftName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidFromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValidTillDate)
        </th>
       
            @Html.HiddenFor(model => model.CreatedDate)
       
            @Html.HiddenFor(model => model.CreatedBy)
        
            @Html.HiddenFor(model => model.Status)
       
        <th>Action</th>
    </tr>
</thead><tbody>
@foreach (var item in Model.SetupEmployeeShiftMasterModelList)
{
    <tr>
        
            @Html.HiddenFor(modelItem => item.EmployeeShiftMasterId)
        
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeShiftName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            
            @Convert.ToDateTime(item.ValidFromDate).ToShortDateString()
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ValidTillDate)*@
             @Convert.ToDateTime(item.ValidTillDate).ToShortDateString()
            
        </td>
       
            @Html.HiddenFor(modelItem => item.CreatedDate)
       
        
            @Html.HiddenFor(modelItem => item.CreatedBy)
        
        
            @Html.HiddenFor(modelItem => item.Status)
       
        <td>
            @Html.ActionLink("Edit", "Edit",new { id=item.EmployeeShiftMasterId}) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.EmployeeShiftMasterId})*@
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeShiftMasterId },new {onclick = "return confirm('Do you want to delete?');"})
        </td>
    </tr>
}
    </tbody>
</table>
    </div></div></div>

