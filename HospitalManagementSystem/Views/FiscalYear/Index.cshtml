     <div class="general-box clearfix">
        <div class="general-box clearfix">

       <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Fiscal Year</h1></div>

<table class="table table-hover tablesorter">
    <thead>
    <tr>
        
        <th>S.N.</th>

        <th>
            @Html.DisplayNameFor(model => model.FiscalYearBS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FiscalYearAD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCurrent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FiscalYearStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FiscalYearEndDate)
        </th>
        <th>Actions</th>
    </tr>
</thead>
    <tbody>
@foreach (var item in Model.FiscalYearList)
{
    string currClass = string.Empty;
    if (item.IsCurrent == 'N')
    {
        currClass = "";
    }
    else
    {
        currClass = "CurrFiscalYear";
    }
            
    <tr class="@currClass">

        <td>@i</td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FiscalYearBS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FiscalYearAD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCurrent)
        </td>
        <td>
            @HospitalManagementSystem.Utility.GetDateOnly(item.FiscalYearStartDate.ToString())
        </td>
        <td>
            @HospitalManagementSystem.Utility.GetDateOnly(item.FiscalYearEndDate.ToString())
        </td>

        
        <td>
            


            @Html.ActionLink("Edit", "Edit", new { id = item.FiscalYearId }) |
            @if (item.IsCurrent == 'N')
            {
                @Html.ActionLink("Set to Current", "ChageStatus", new { id = item.FiscalYearId });
            }
            
        </td>
       
    </tr>
            i++;
}

        </tbody>
</table>
  </div>

