@model Hospital.Models.StockDistributionMasterModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StockLayout.cshtml";
}

<h2 style="text-align:center;">Stock Distribute</h2>

<p id="linkNewBack">
    @Html.ActionLink("Create New", "Distribute")
</p>


<div class="contentWrapper">

    <div class="general-box clearfix">

        <div class="general-box clearfix">

            <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Distribute</h1></div>
<table class="table table-hover tablesorter">
    <thead>
    <tr>
       
        
        <th>
            @Html.DisplayNameFor(model => model.BillNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillDate)
        </th>
        <th>
            Department
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
       
       
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th>Actions</th>
    </tr>
        </thead><tbody>
@foreach (var item in Model.DistributionMasterList) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.BillNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillDate)
        </td>
        <td>
            @Hospital.Utility.GetDepartmentName(item.DepartmentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PatientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
       
      
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
       <td>
           @Html.ActionLink("Details", "Details", new { id=item.DistributionMasterId})|
           @Html.ActionLink("Print", "Print", new{id=item.DistributionMasterId })
       </td>
    </tr>
}
</tbody>
</table>
                </div></div></div>
