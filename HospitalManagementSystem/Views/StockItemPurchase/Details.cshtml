@model IEnumerable<Hospital.Models.StockItemPurchaseDetailModel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_StockLayout.cshtml";
}

<div class="contentWrapper">

     <div class="general-box clearfix">

        <div class="general-box clearfix">

            <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Stock Item Purchase Detail</h1></div>
<table class="table table-hover tablesorter">
    <thead>
    <tr>
       
       
        <th>
            @Html.DisplayNameFor(model => model.StockItemEntryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockUnitId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        @*<th>Actions</th>*@
    </tr>
        </thead>
@foreach (var item in Model) {
    <tr>
        
       
        <td>
            @Hospital.Utility.GetItemName(item.StockItemPurchaseDetailId)
        </td>
        <td>
            @Hospital.Utility.GetPurchaseDetailUnit(item.StockItemPurchaseDetailId)
        </td>
        <td>
            @((int)item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
