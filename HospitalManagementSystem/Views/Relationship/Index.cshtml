       <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Relationships</h1></div>

<table class="table table-hover tablesorter">
    <thead>
    <tr>
        
        <th>S.N.</th>

        <th>
            @Html.DisplayNameFor(model => model.RelationName)
        </th>
        
        
        <th>Actions</th>
    </tr>
</thead>
    <tbody>
@foreach (var item in Model.RelationshipList)
{
    <tr>

        <td>@i</td>
        
        <td>
            @Html.DisplayFor(modelItem => item.RelationName)
        </td>
        
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RelationId}) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.RelationId },new {onclick = "return confirm('Do you want to delete?');"})
            @*@Html.ActionLink("Delete", "Delete", new { id=item.RelationId })*@
        </td>
    </tr>
    
    i++;
}

        </tbody>
</table>

