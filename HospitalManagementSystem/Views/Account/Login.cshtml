@model HospitalManagementSystem.Models.LoginModel

<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/Login/normalize.css" rel="stylesheet" />
<link href="~/Content/Login/main.css" rel="stylesheet" />

<style>
    #logo {
        width: 340px;
        height: 124px;
        margin: 0 auto;
        text-align: center;
        color: #fff;
        background: url(../Images/foot-logo.png) no-repeat center top;
        margin-top: -80px;
    }
</style>




<section class="page-wrap main">

    <div id="logo"></div>
    <br />
    <br />



    @using (Html.BeginForm("Login", "account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-2" }))
    {


        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <article class="banner">Hospital Management Software<span class="version">v1.0</span></article>

        <h1><span class="sign-up">Log in</span></h1>
        if (TempData["success"] != null)
        {
        <span style="color: red;">@TempData["success"]</span>
        }


        <p class="float">
            <label for="login"><i class="icon-user"></i>Username</label>

            @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Username or email" })
            @Html.ValidationMessageFor(model => model.UserName)

            @*<input type="text" name="login" placeholder="Username or email">*@


        </p>
        <p class="float">
            <label for="password"><i class="icon-lock"></i>Password</label>

            @Html.PasswordFor(model => model.Password, new { @placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.Password)
            @*<input type="password" name="password" placeholder="Password" class="showpassword">*@
        </p>
        @*<p class="float">
            <label for="login"><i class="icon-Module"></i>Module</label>

            @Html.DropDownListFor(model => model.Module, Hospital.Utility.GetHospitalModule(), new { style = "width:220px;height:25px" })
            @Html.ValidationMessageFor(model => model.Module)
        </p>*@
                        
                        


                    
@*<div style="float: right;">
            <a href="">
                <label for="showPassword">Forget your password?</label></a>
        </div>*@
                    
        <p class="clearfix btns">

            <input type="submit" name="submit" value="Submit" class="btn"><br />

        </p>
                        
    }


    <section class="info">
        <p>
            <span>© 2017. Hospital Management System. All Rights Reserved.</span>
            <span style="color: white;">Designed and Developed by: Pushkar Adhikari.</span>
        </p>
    </section>
</section>








