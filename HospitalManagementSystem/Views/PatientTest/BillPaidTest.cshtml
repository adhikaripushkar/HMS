@model HospitalManagementSystem.Models.PatientTestModel

@{
    ViewBag.Title = "BillPaidTest";
    Layout = "~/Views/Shared/_PatientTestLayout.cshtml";
    int i = 1;
}

<h2 style="text-align: center;">Paid Bill List</h2>
<div class="contentWrapper">

    @*<p id="linkNewBack">
        @Html.ActionLink("Create New", "Create")
    </p>*@


    <div class="general-box clearfix">

        <div class="general-box clearfix">

            <div class="boxWrapper">
                <div class="boxHeadingPanel">
                    <h1></h1>
                </div>
                <table class="table table-hover tablesorter">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.BillPaidTestModel.TransactionDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BillPaidTestModel.BillNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BillPaidTestModel.PatientName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BillPaidTestModel.PatientId)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.BillPaidTestModelList)
                        {
                            <tr>

                                <td>


                                    @Convert.ToDateTime(item.TransactionDate).ToShortDateString()
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BillNumberInt)
                                </td>
                                <td>
                                    @HospitalManagementSystem.Utility.GetPatientNameWithIdFromOpd(item.PatientId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatientId)
                                </td>
                                <td>
                                    @Html.ActionLink("Test Details", "DetailOfBillPaidTest", new { id = item.PatientId, billno = item.BillNumber, dept = item.DepartmentName, BillnumberInt = item.BillNumberInt })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
