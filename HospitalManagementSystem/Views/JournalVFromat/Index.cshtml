@model HospitalManagementSystem.Models.JournalVFormatModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}




<h2 style="text-align:center;">Journal Voucher Setup</h2>

@if (TempData["success"] == "Record Created Successfully !")
{ 
    <div class="alert alert-success">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Creation Failed !")
{ 
    <div class="alert alert-error">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Updated Successfully !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Updation Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

 

@if (TempData["success"] == "Record Deleted Successfully !")
{ 
    <div class="alert alert-info">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Deletion Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}
@if (TempData["success"] == "Already Exist !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}


<div class="contentWrapper">
<p>
    @Html.ActionLink("Create New", "Create", null, new {@id="linkNewBack"})
</p>
<div class="general-box clearfix">
        <div class="general-box clearfix">

       <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Journal Voucher</h1></div>

<table class="table table-hover tablesorter">
     <thead>
    <tr>
      
        <th>
            @Html.DisplayNameFor(model => model.JVFormat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCurrent)
        </th>
        <th>Action</th>
    </tr>
</thead>
     <tbody>
@foreach (var item in Model.ListJournalVFormatModel) {
    <tr>
        
            @Html.HiddenFor(modelItem => item.JVId)
       
            @Html.HiddenFor(modelItem => item.Prefix)
       
            @Html.HiddenFor(modelItem => item.FiscalYear)
      
            @Html.HiddenFor(modelItem => item.Postfix)
       
        <td>
            @Html.DisplayFor(modelItem => item.JVFormat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCurrent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.JVId  }) |
           
            
            @Html.ActionLink("Delete", "Delete",new { id = item.JVId }, new { onclick = "return confirm('Do you want to delete?');" }) |
             @if (item.IsCurrent == 'N')
            {
                @Html.ActionLink("Set to Current", "ChageStatus", new { id = item.JVId }) ;
            }
        </td>
    </tr>
}
</tbody>
</table>
           </div>
            <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>
            </div>
    </div>
    </div>

