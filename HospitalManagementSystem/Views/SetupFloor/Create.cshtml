@model Hospital.Models.SetupFloorModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}

<h2 style="text-align:center;">Floor Setup</h2>
<div class="contentWrapper">

@using (Html.BeginForm("Create", "SetupFloor", FormMethod.Post, new { @class = "bs-docs-example form-inline" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create</legend>
         <div class="row-fluid singleline">

        <div class="editor-label">
            @Html.HiddenFor(model => model.FloorId)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.FloorId)
            @Html.ValidationMessageFor(model => model.FloorId)
        </div>
<label>
     <span class="size">    @Html.ValidationMessageFor(model => model.FloorName)</span>
        <div class="editor-label">
            @Html.LabelFor(model => model.FloorName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FloorName)
        
        </div>
    </label>
        <div class="editor-label">
            @Html.HiddenFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status)
        </div>
              </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @id="linkNewBack"})
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
