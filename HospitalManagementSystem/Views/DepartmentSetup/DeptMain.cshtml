<h2 style="text-align: center">Department Setup </h2>





@if (TempData["Success"] != null)
{
        
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
         
}


@if (TempData["Exist"] != null)
{
    <div class="alert alert-error">
        @TempData["Exist"]
    </div>
}

@if (TempData["Update"] != null)
{
    <div class="alert">
        @TempData["Update"]
    </div>
}



@if (TempData["Delete"] != null)
{
    <div class="alert alert-info">
        @TempData["Delete"]
    </div>
}




<div class="contentWrapper">





    <p>
        @Html.ActionLink("Create New", "Create", null, new { @id = "linkNewBack" })
    </p>

    <div>
        @using (Html.BeginForm("DeptMain", "DepartmentSetup", FormMethod.Get))
        {
            <p>
                @Html.TextBox("searchString")
                <input type="submit" value="Search" />
            </p>
        }
    </div>


    <div class="general-box clearfix">

        <div class="general-box clearfix">

            <div class="boxWrapper">

                <div class="boxHeadingPanel">
                    <h1>Departments</h1>
                </div>



                <table class="table table-hover tablesorter">
                    <thead>

                        <tr>

                            <th>S.N.</th>
                            <th>@Html.DisplayNameFor(model => model.DeptCode)</th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeptName)
                            </th>
                            <th>Action</th>

                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model.DepartmentSetupList)
                        {
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeptCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeptName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DeptID }) |
           @* @Html.ActionLink("Details", "Details", new { id=item.DeptID }) |*@
                                    @* @Html.ActionLink("Delete", "Delete", null,new {id=item.DeptID })*@
                                    <a href="~/DepartmentSetup/Delete/@item.DeptID" onclick = "return confirm('Do you want to delete?')">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>


            </div>

            @*for sorting *@

            <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>

            @*---------------*@








        </div>


    </div>

</div>























