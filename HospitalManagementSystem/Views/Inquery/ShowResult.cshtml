@model HospitalManagementSystem.Models.IpdInqueryReportModel

@{ Layout = null;
   int i = 1;}





<table class="table table-hover tablesorter">

    <thead>
        <tr>
            <th>S.N:</th>
            <th>Name:</th>

            <th>Ipd Registration Id
            </th>
            <th>Registration Date

            </th>

            <th>Room Type</th>

            <th>Word Number
            </th>
            <th>Room Number</th>

            <th>Bed Number</th>



        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.IpdInqueryReportList)
        {
            <tr>
                <td>@i</td>
                <td>@HospitalManagementSystem.Utility.OpdPatientName(item.opdid)</td>
                <td>@item.IpdRegistrationId</td>
                <td>@item.RegistrationDate.ToShortDateString()</td>
                <td>@HospitalManagementSystem.Utility.GetRoomTypeName(item.RoomType) </td>
                <td>@item.IpdWordNumber</td>
                <td>@item.RoomNumber</td>
                <td>@item.BedNumber</td>



            </tr>
            i++;
        }

    </tbody>
</table>


@*for sorting *@

<div class="boxFooter">

    <div id="pager" style="">
        <form>
            <img src="@Url.Content("~/Content/images/first.png")" class="first" />
            <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
            <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
            <img src="@Url.Content("~/Content/images/next.png")" class="next" />
            <img src="@Url.Content("~/Content/images/last.png")" class="last" />
            <select class="pagesize valid" style="width: 70px; height: 30px;">
                <option selected="selected" value="10">10</option>
                <option value="5">5</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
            </select>
        </form>
    </div>

</div>


