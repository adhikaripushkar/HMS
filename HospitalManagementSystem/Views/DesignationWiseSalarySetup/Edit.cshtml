@model HospitalManagementSystem.Models.DesignationWiseSalarySetupModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PayRollLayout.cshtml";
}


@using (Html.BeginForm("Edit", "DesignationWiseSalarySetup", FormMethod.Post, new { @class = "bs-docs-example form-inline" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create</legend>
        <div class="row-fluid singleline">


            @Html.HiddenFor(m=>m.ID)
            <label>
                <span class="size"></span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.DesignationID)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.DesignationID, HospitalManagementSystem.Utility.GetDesignation(), new { @id = "txtAlowanceName" })

                </div>
            </label>


            <label>
                <span class="size"></span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.BasicSalary)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.BasicSalary)

                </div>
            </label>
            <label>
                <span class="size"></span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Grade)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Grade)

                </div>
            </label>
            <br />

            <label>
                <span class="size"></span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.LaganiKoshPercent)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.LaganiKoshPercent, new { @id = "LaganiKoshPercent", @onkeyup = "Per();" })

                </div>
            </label>

            <label>
                <span class="size"></span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.LaganiKoshAmount)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.LaganiKoshAmount, new { @id = "LaganiKoshAmount", @onkeyup = "Per();" })

                </div>
            </label>

            <label>
                <span class="size"></span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Remarks)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Remarks)

                </div>
            </label>





            <p>
                <input type="submit" value="Update" />
            </p>

        </div>

    </fieldset>

}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @id = "linkNewBack" })
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



<script>



    function Per() {

        if ($('#LaganiKoshAmount').val() > 0) {
            $('#LaganiKoshPercent').val(0);
        }
        else {
            $('#LaganiKoshAmount').val(0);
        }

        //$('#LaganiKoshAmount').attr("readonly", true)

    };
    //function amo() {
    //    $('#LaganiKoshPercent').attr("readonly", true)
    //};




</script>
