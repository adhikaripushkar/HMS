@model HospitalManagementSystem.Models.DepositMasterModel

@{
    ViewBag.Title = "Deposit";
    Layout = "~/Views/Shared/_BillingCounterLayout.cshtml";
}

<script>
    var j = $.noConflict();
    j(document).ready(function (e) {
        //j('#DepoDate').val("");
        //  j("#DepoDate").attr("value", "@DateTime.Now.ToShortDateString()");
        j("#DepoDate").datepicker();
    });

    $(function () {
        $('#DepositedAmount').css('border', '2px solid blue');
        $('#DepositedAmount').focus();

    });

    $("#DepositedAmount").live("focusout", function (e) {
        $('#DepositedAmount').css('border', '0px');


    });



</script>

<div class="contentWrapper">




    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <div class="bs-docs-example form-inline">
                <legend>Create</legend>



                <div class="row-fluid singleline">

                    @MyHelpers.PatientInfoWithOpdId(Model.PatientId)


                    <label>
                        <div class="editor-label">
                            @Html.HiddenFor(model => model.PatientId)
                        </div>
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.PatientId, new { @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.PatientId)
                        </div>
                    </label>

                    <label>
                        <div class="editor-label">
                            @Html.HiddenFor(model => model.DepartmentId)
                        </div>
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.DepartmentId, new { @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.DepartmentId)
                        </div>
                    </label>

                    <label>

                        <div class="editor-label">
                            @Html.HiddenFor(model => model.PatientDepartmentId)
                        </div>
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.PatientDepartmentId, new { @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.PatientDepartmentId)
                        </div>
                    </label>

                    <label>
                        <div class="editor-label">
                            @Html.HiddenFor(model => model.objPatientPartialDetail.PatientFullName)
                        </div>
                        <div class="editor-field">
                            @Html.HiddenFor(model => model.objPatientPartialDetail.PatientFullName, new { @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.objPatientPartialDetail.PatientFullName)
                        </div>


                    </label>

                </div>
                <div class="row-fluid singleline">

                    <label>

                        <div class="editor-label">
                            Amount ***
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.DepositedAmount, new { @Value = "" })
                            @Html.ValidationMessageFor(model => model.DepositedAmount)
                        </div>
                    </label>

                    <label>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.DepositedDate)
                        </div>
                        <div class="editor-field">
                            @Html.TextBoxFor(model => model.DepositedDate, new { @id = "DepoDate", @Value = DateTime.Now.ToShortDateString() })
                            @Html.ValidationMessageFor(model => model.DepositedDate)
                        </div>
                    </label>

                    <label>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.DepostedBy)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.DepostedBy)
                            @Html.ValidationMessageFor(model => model.DepostedBy)
                        </div>
                    </label>

                    <label>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.RelationId)
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.RelationId, HospitalManagementSystem.Utility.GetRelationTypeDD())
                            @Html.ValidationMessageFor(model => model.RelationId)
                        </div>
                    </label>

                </div>
                <div class="row-fluid singleline">

                    <label>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.DepositeType)
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.DepositeType, HospitalManagementSystem.Utility.GetDepositeType())
                            @Html.ValidationMessageFor(model => model.DepositeType)
                        </div>
                    </label>
                    <label>
                        <div class="editor-label">
                            Deposit For
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.DepartmentId, HospitalManagementSystem.Utility.GetDepartmentList())
                            @Html.ValidationMessageFor(model => model.DepartmentId)
                        </div>
                    </label>


                </div>

                <p>
                    <input type="submit" value="Create" id="BtnSubmit" />
                </p>

            </div>
        </fieldset>
    }

    <div id="linkNewBack">
        @Html.ActionLink("Back to List", "Index")
    </div>


</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $("#DepartmentId").live("focusout", function (e) {
        $('#BtnSubmit').focus();
        $('#BtnSubmit').css('border', '3px solid yellow');
        $('#BtnSubmit').css('padding', '6px');


    });
    $("#BtnSubmit").live("focusout", function (e) {
        $('#BtnSubmit').css('border', '0px');

        
    });
    $("#linkNewBack").live("focusout", function (e) {
        
        $('#DepositedAmount').focus();

    });

    
</script>



