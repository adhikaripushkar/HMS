@model Hospital.Models.StockSupplierModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_StockSetupLayout.cshtml";
}

<h2 style="text-align:center;">Stock Supplier Setup</h2>

<div class="contentWrapper">

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    <div class="bs-docs-example form-inline">
    <fieldset>
        <legend>Create</legend>

        @if (TempData["message"] != null || TempData["message"] != "") { 
    <p>
        @TempData["message"]
    </p>
}
        <div class="row-fluid singleline">

             <label>
                <div class="size">@Html.ValidationMessageFor(model => model.Type)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Type,Hospital.Utility.GetSupplierType())
            
        </div>
                </label>

            </div>

        <div class="row-fluid singleline">

            <label>
                <div class="size">@Html.ValidationMessageFor(model => model.StockSupplierName)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StockSupplierName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StockSupplierName)
            
        </div>
                </label>

            <label>
                
                <div class="size">@Html.ValidationMessageFor(model => model.StockSupplierAddress)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StockSupplierAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StockSupplierAddress)
            
        </div>
                </label>

            <label>
                <div class="size">@Html.ValidationMessageFor(model => model.StockSupplierConNumber)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StockSupplierConNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StockSupplierConNumber)
            
        </div>
                </label>

            <label>
                <div class="size">@Html.ValidationMessageFor(model => model.StockSupplierVatNumber)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StockSupplierVatNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StockSupplierVatNumber)
            
        </div>
                </label>
            </div>

        <div class="row-fluid singleline">
            <label>
                <div class="size">@Html.ValidationMessageFor(model => model.StockSupplierEmail)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.StockSupplierEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StockSupplierEmail)
            
        </div>
                </label>
            </div>
        

        <p>
            <input type="submit" value="Create" />
           
        </p>
    </fieldset>
        </div>
     <span id="linkNewBack"> @Html.ActionLink("Back to List", "Index")</span>
}


@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")


<script type="text/javascript">

    $(document).ready(function () {
        //alert();
      
       
        $("#StockSupplierName").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/StockSupplier/AutocompleteSupplier",
                    type: "GET",
                    dataType: "json",
                    data: { s: request.term },
                    success: function (data) {
                        
                        response($.map(data, function (item) {
                            
                            return { label: item ,value:""};
                           

                        }))

                    },
                    //error:function(data){
                    //    response($.map(data, function (item) {

                    //        return { label: item.StockUnitName, Value: item.StockUnitName };
                    //    }))
                    //}
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    });
</script>

