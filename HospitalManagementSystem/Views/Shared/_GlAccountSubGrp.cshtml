                    @*<li class="tables" style="text-align: left;"><a href='~/GlAccountSubGroup/GlsubgroupSearch' title=""><span style="font-size: 12px;">Search</span></a> </li>*@
                    
                    
                </ul>
            </div>


        </nav>

    </header>



    <div id="body">
        @RenderSection("featured", required: false)
        <section class="">
            @RenderBody()
        </section>

    </div>

    <footer>
        <div class="footer">

            <div class="footer-left"><span>© 2017. HospitalManagementSystem Management System. All Rights Reserved.</span> </div>
            <div class="footer-right"><span>Designed and Developed by: Pushkar Adhikari</span> </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>


<script>




    $(document).ready(function () {
        $('#menu a').on('click', function () {
            $('#menu a').removeClass('active');
            $(this).addClass('active');


        });
    });




</script>
