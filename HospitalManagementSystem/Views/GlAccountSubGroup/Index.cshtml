@model HospitalManagementSystem.Models.GlAccountSubGroupModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_GlAccountSubGrp.cshtml";
    int i = 1;
}

<h2 style="text-align: center;">Chart Of Account</h2>
<div class="general-box clearfix">
    <div style="font-weight: bold;">
        @using (Html.BeginForm("SearchIndex", "GlAccountSubGroup", FormMethod.Get))
        {
            <p>
                <span style="font-size: 20px; font-weight: bold;">Search Account Sub Group Name:&nbsp;&nbsp;</span>@Html.TextBox("AccSubGroupName")
                <input type="submit" value="Search" />
            </p>
        }
    </div>


</div>

<div class="contentWrapper">

    <p id="linkNewBack">
        @Html.ActionLink("Create New", "Create")
    </p>


    <div class="general-box clearfix">
        <div class="general-box clearfix">

            <div class="boxWrapper">
                <div class="boxHeadingPanel">
                    <h1>Chart Of Account</h1>
                </div>

                <table class="table table-hover tablesorter">

                    <thead>

                        <tr>
                            <th>S.NO.</th>

                            <th>
                                @Html.DisplayNameFor(model => model.AccGroupName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AccSubGroupName)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.GlAccountSubGroupModelList)
                        {
                            <tr>
                                @Html.HiddenFor(modelItem => item.AccSubGruupID)

                                @Html.HiddenFor(modelItem => item.AccGroupID)
                                <td>
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccGroupName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccSubGroupName)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.AccSubGruupID, editval = 0 }) |
            
            @Html.ActionLink("Delete", "Delete", new { id = item.AccSubGruupID })
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>

            @*for sorting *@

            <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>

            @*---------------*@

        </div>

    </div>
</div>
