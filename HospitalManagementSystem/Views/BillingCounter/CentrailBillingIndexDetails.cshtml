@model HospitalManagementSystem.Models.BillingCounterModel

@{
    ViewBag.Title = "CentrailBillingIndexDetails";
    Layout = "~/Views/Shared/_BillingCounterLayout.cshtml";
}

<h2 style="text-align: center;">Centrail Billing Details</h2>


<div class="contentWrapper">

    <p id="linkNewBack">
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="general-box clearfix">

        <div class="general-box clearfix">


            <div class="boxWrapper">
                <div class="boxHeadingPanel">
                    <h1>Centrail Billing Details</h1>
                </div>

                <table class="table table-hover tablesorter">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ObjBillingCounterPaymentDetails.Particulars)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ObjBillingCounterPaymentDetails.Amount)
                            </th>

                            

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.BillingCounterPaymentDetailsList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountHeadName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>

                                

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            @*for sorting *@

            <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>

            @*---------------*@


        </div>
    </div>


</div>
