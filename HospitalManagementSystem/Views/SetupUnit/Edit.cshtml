@model Hospital.Models.SetupUnitModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}

<h2 align="Center">Unit Setup</h2>

<div class="contentWrapper">

@using (Html.BeginForm("Edit", "SetupUnit", FormMethod.Post, new { @class = "bs-docs-example form-inline" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit</legend>
        @Html.HiddenFor(model => model.UnitId)

        <div class="row-fluid singleline">
            <label>
                <span class="size">@Html.ValidationMessageFor(model => model.UnitCode)</span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.UnitCode)

                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.UnitCode)

                </div>
            </label>

            <label>
                <span class="size">@Html.ValidationMessageFor(model => model.UnitName)</span>
                <div class="editor-label">
                    @Html.LabelFor(model => model.UnitName)

                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.UnitName)

                </div>
            </label>

        </div>
        
        <p>
            <input type="submit" value="Edit" />
        </p>
    </fieldset>
}

<div>
  @Html.ActionLink("Back to List", "Index", null, new { @id="linkNewBack" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

</div>