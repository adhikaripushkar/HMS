            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            
        </div>
            </label>

              <label>
                <span class="size">@Html.ValidationMessageFor(model => model.SectionCode)</span>
        <div class="editor-label">
            @Html.LabelFor(model => model.SectionCode)
