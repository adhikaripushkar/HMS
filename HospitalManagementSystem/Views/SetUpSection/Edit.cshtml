@model Hospital.Models.SetUpSectionModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}

<h2 style="text-align:center;">Test Section Setup</h2>


<div class="contentWrapper">

@using (Html.BeginForm("Edit", "SetUpSection", FormMethod.Post, new { @class = "bs-docs-example form-inline" }))
{
