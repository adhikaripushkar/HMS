@model Hospital.Models.SetUpEmergencyFeeModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
    int i = 1;
}

<h2 style="text-align: center;">Emergency Fee Setup</h2>
@if (TempData["success"] == "Record Created Successfully !")
{ 
    <div class="alert alert-success">
        @TempData["success"]
    </div>

}

@if (TempData["success"] == "Record Creation Failed !")
{ 
    <div class="alert alert-error">
        @TempData["success"]
    </div>

}

@if (TempData["success"] == "Record Updated Successfully !")
{ 
    <div class="alert">
        @TempData["success"]
    </div>

}


@if (TempData["success"] == "Record Updation Failed !")
{ 
    <div class="alert">
        @TempData["success"]
    </div>

}



@if (TempData["success"] == "Records Delated Successfully !")
{ 
    <div class="alert alert-info">
        @TempData["success"]
    </div>

}


@if (TempData["success"] == "Record Deletion Failed !")
{ 
    <div class="alert">
        @TempData["success"]
    </div>

}
<div class="contentWrapper">
<p>
    @Html.ActionLink("Create New", "Create", null, new { @id = "linkNewBack" })
</p>
 <div class="general-box clearfix">
        <div class="general-box clearfix">
            <div class="boxWrapper">
                <div class="boxHeadingPanel">
                    <h1>Emergency Fee</h1>
                </div>

                <table class="table table-hover tablesorter">

                    <thead>
    <tr>
    
            @Html.HiddenFor(model => model.FeeId)
        
        <th>
            @Html.DisplayNameFor(model => model.EmergencyFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
      
            @Html.HiddenFor(model => model.CreatedBy)
       
            @Html.HiddenFor(model => model.CreatedDate)
     
            @Html.HiddenFor(model => model.FiscalYearId)
     
        <th>Action</th>
    </tr>

@foreach (var item in Model.SetUpEmergencyFeeModelList)
{
    <tr>
    
            @Html.HiddenFor(modelItem => item.FeeId)
    
        <td>
            @Html.DisplayFor(modelItem => item.EmergencyFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalFee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
   
            @Html.HiddenFor(modelItem => item.CreatedBy)
      
            @Html.HiddenFor(modelItem => item.CreatedDate)
     
            @Html.HiddenFor(modelItem => item.FiscalYearId)
      
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FeeId }) |
              @if (item.Status == false)
            {
                @Html.ActionLink("Set to Current |", "ChageStatus", new { id = item.FeeId });

            }
           @* @Html.ActionLink("Details", "Details", new { id=item.FeeId}) |*@
            @Html.ActionLink("Delete", "Delete",new { id = item.FeeId }, new { onclick = "return confirm('Do you want to delete?');" })
        </td>
    </tr>
}

</table>
    </div>
               <div class="boxFooter">

                <div id="pager" style="">
                    <form>
                        <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                        <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                        <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                        <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                        <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                        <select class="pagesize valid" style="width: 70px; height: 30px;">
                            <option selected="selected" value="10">10</option>
                            <option value="5">5</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>

            </div>
            </div>
     </div>
    </div>
