{ 
    <div class="alert">
@TempData["success"]
        </div>

}


<div style="text-align:center;"><h1>Item List</h1></div>


<div class="contentWrapper">

<p>
    @Html.ActionLink("Create New", "Create", null, new { @id="linkNewBack"})
</p>

     <div class="general-box clearfix">
        <div class="general-box clearfix">
            <div class="boxWrapper">
                <div class="boxHeadingPanel"><h1>Item List</h1></div>
<table class="table table-hover tablesorter">
      <thead>
    <tr>
      
            @Html.HiddenFor(model => model.ItemBlcokSetupID)
        <th>
            Block
        </th>
        <th>
            Particular
        </th>
        <th>
            SerialNoFrom
        </th>
        <th>
            SerialNoTo
        </th>
        
        <th>Action</th>
    </tr>
          </thead>
    <tbody>

@foreach (var item in Model.ItemBlockSetupList)
{
    <tr>
       
        <td>
            @*@Html.DisplayFor(modelItem => item.BlockId)*@
              @HospitalManagementSystem.Utility.GetBlockName(item.BlockId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Particular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SerialNoFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SerialNoTo)
        </td>
      
        <td>
            @Html.ActionLink("Edit", "Edit", new {id=item.ItemBlcokSetupID}) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ItemBlcokSetupID}) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.ItemBlcokSetupID} )*@
        </td>
    </tr>
}
</tbody>

</table>
    </div>
                </div>
         </div>


     @*for sorting *@
        
