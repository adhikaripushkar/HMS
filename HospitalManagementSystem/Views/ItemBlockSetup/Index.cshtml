@model HospitalManagementSystem.Models.ItemBlockSetupModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StockLayout.cshtml";
}


@if (TempData["success"] == "Record Created Successfully !")
{ 
    <div class="alert alert-success">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Creation Failed !")
{ 
    <div class="alert alert-error">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Updated Successfully !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Updation Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

 

@if (TempData["success"] == "Record Deleted Successfully !")
{ 
    <div class="alert alert-info">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Deletion Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}
