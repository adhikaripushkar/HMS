@model Hospital.Models.StockItemEntryModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StockLayout.cshtml";
}

<h2 style="text-align:center;">Stock Item Entry Setup</h2>


@if (TempData["success"] == "Record with this item name already exists in database!")
{ 
    <div class="alert alert-success">
@TempData["success"]
        </div>
}

@if (TempData["success"] == Hospital.UtilityMessage.save)
{ 
    <div class="alert alert-success">
@TempData["success"]
        </div>
}

@if (TempData["success"] == Hospital.UtilityMessage.savefailed)
{ 
    <div class="alert alert-error">
@TempData["success"]
        </div>

}

@if (TempData["success"] == Hospital.UtilityMessage.edit)
{ 
    <div class="alert">
@TempData["success"]
        </div>

}


@if (TempData["success"] == Hospital.UtilityMessage.editfailed)
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

 

@if (TempData["success"] == Hospital.UtilityMessage.delete)
{ 
    <div class="alert alert-info">
@TempData["success"]
        </div>

}


@if (TempData["success"] == Hospital.UtilityMessage.deletefailed)
{ 
    <div class="alert">
@TempData["success"]
        </div>

}
<div class="contentWrapper">

<p id="linkNewBack">
    @Html.ActionLink("Create New", "Create")
</p>



<div class="general-box clearfix">

        <div class="general-box clearfix">

       <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Stock Item Entry </h1></div>

<table class="table table-hover tablesorter">
    <thead>
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.StockCategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockSubCategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockUnitId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockSupplierId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockItemTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MinStockQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxStockQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpeningStock)
        </th>
        
        <th>Actions</th>
    </tr>
        </thead><tbody>
@foreach (var item in Model.StockItemEntryList) {
    
    <tr>
        
        <td>
            @Hospital.Utility.GetStockCategoryName(item.StockCategoryId)
        </td>
        <td>
            @Hospital.Utility.GetSubCategoryName(item.StockSubCategoryId)
        </td>
        <td>
            @Hospital.Utility.GetUnitName(item.StockUnitId)
        </td>
        <td>
            @Hospital.Utility.GetSupplierName(item.StockSupplierId)
        </td>
        <td>
            @Hospital.Utility.GetItemTypeName(item.StockItemTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinStockQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxStockQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpeningStock)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StockItemEntryId }) |
            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })*@ 
            @Html.ActionLink("Delete", "Delete", new { id=item.StockItemEntryId }, new { onclick="return confirm('Do you want to delete?')"})
        </td>
    </tr>
}
</tbody>
</table>
           </div>

    <div class="boxFooter">
                   
                   <div id="pager" style="">
            <form>
            <img src="@Url.Content("~/Content/images/first.png")" class="first" />
            <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
            <input class="pagedisplay" type="text" style="width:60px;height:24px;">
            <img src="@Url.Content("~/Content/images/next.png")" class="next" />
            <img src="@Url.Content("~/Content/images/last.png")" class="last" />
            <select class="pagesize valid" style="width:70px;height:30px;"">
                <option selected="selected" value="10">10</option>
                <option value="5">5</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
            </select>
            </form>
            </div>

               </div>

    </div>
    </div></div>