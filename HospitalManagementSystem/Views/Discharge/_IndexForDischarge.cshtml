@model HospitalManagementSystem.Models.EmergecyMasterModel
<div class="general-box clearfix">
        <div class="general-box clearfix">

       <div class="boxWrapper" id="DischargelistId">
    <div class="boxHeadingPanel"><h1>Details</h1></div>

<table class="table table-hover tablesorter">
    <thead>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FinalDiagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutcomeTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutcomeText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DischargeConditionAndInst)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.TimeOut)
            </th>
            <th>Action</th>


        </tr>

        @foreach (var item in Model.EmergencyMasterModelList)
        {
            <tr>

                @Html.HiddenFor(modelItem => item.EmergencyMasterId)

