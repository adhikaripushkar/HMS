                </td>

                @*  <td>
            @Html.ActionLink("Edit", "Edit", new {  id=Model.EmergencyMasterId}) |
        
            @Html.ActionLink("Delete", "Delete", new { id=Model.EmergencyMasterId})
        </td>*@
