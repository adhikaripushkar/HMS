        }

    </table>

                    <br />
    @if (Model.EmergencyMasterModelList.Count > 1)
    {

    <p>
        <a href='~/Discharge/EditForDischarge?id=@Model.EmergencyMasterId' title="" class="crtdischargelink"><span style="font-size:20px;">Create new</span></a>

    </p>
    }

</div></div></div>
<div id="cartooning"></div>
<script>
    $(".crtdischargelink").click(function (e) {
        e.preventDefault();
        var data = $('#EmergencyMasterId').val();
        var url = this.href;

        $.get(url, { id: data }, function (res) {

            $("#cartooning").html(res);

        });
    });
</script>
