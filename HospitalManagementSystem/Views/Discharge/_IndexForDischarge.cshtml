                    @Html.DisplayFor(modelIteml => item.OutcomeText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DischargeConditionAndInst)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.TimeOut)
                </td>
                <td>
