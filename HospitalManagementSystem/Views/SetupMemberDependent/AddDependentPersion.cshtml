@using Hospital.Helpers
@model Hospital.Models.SetupMemberDependentModelRel





<style>

    #relId {

        width:200px;
    }

    #relIdm {
         width:190px;
    }

</style>







<div class="row" style="margin-left:20px;">

    <fieldset>
        <legend><h4>Person</h4></legend>
        
    
@using (Html.BeginCollectionItem("lstOfDependentModelRel"))
{

        <div class="row-fluid singleline">

            <label>
        <div class="editor-label">
            @Html.LabelFor(model => model.RelationID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RelationID, Hospital.Utility.GetRelationTypeDD(), new {})
            @*@Html.ValidationMessageFor(model => model.RelationID)*@
        </div>
                </label>

            <label>

        <div class="editor-label">
            @Html.LabelFor(model => model.FullName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FullName)
            @*@Html.ValidationMessageFor(model => model.FullName)*@
        </div>
                </label>


            <label>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateofBirth)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateofBirth, new { @class="DobId",@Value=DateTime.Now.ToShortDateString()})
            @*@Html.ValidationMessageFor(model => model.DateofBirth)*@
        </div>
                </label>
            <label>
                <div class="size">@Html.ValidationMessageFor(model => model.MoibleNumber)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MoibleNumber)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(model => model.MoibleNumber, new { @id="relIdm"})
            
        </div>
            </label>

            </div>

        <div class="row-fluid singleline">

            <label>
        <div class="editor-label">
            @Html.LabelFor(model => model.ContactNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContactNumber)
            @*@Html.ValidationMessageFor(model => model.ContactNumber)*@
        </div>
                </label>

            <label>
                <div class="size">@Html.ValidationMessageFor(model => model.Email)</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            
        </div>

            </label>

            <label>
        <div class="editor-label">
            @Html.LabelFor(model => model.BloodGroupID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.BloodGroupID,Hospital.Utility.BloodGroupList(),"Select")
            @*@Html.ValidationMessageFor(model => model.BloodGroupID)*@
        </div>
                </label>
            <label>

        <div class="editor-label">
            @Html.LabelFor(model => model.Gender)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Gender, Hospital.Utility.GetGenderList(), new {@Id="relId"})
            @*@Html.ValidationMessageFor(model => model.Gender)*@
        </div>
                </label>

            <label> <input type="button" class="row-button btn btn-warning" value="Remove" /></label>
                </div>
              


            
}
    </fieldset>
        


            </div>


    
