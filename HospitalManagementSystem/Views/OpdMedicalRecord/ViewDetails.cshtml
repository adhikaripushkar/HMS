@model HospitalManagementSystem.Models.OpdMedicalRecordModel

@{
    ViewBag.Title = "View Details";
    Layout = "~/Views/Shared/_OpdMRLayout.cshtml";
}


<div class="contentWrapper">
    <h2>ViewDetails</h2>
    <div class="bs-docs-example form-inline">
        <fieldset>

            <legend>Edit</legend>

            <div class="row-fluid singleline">

                <label>

                    <span class="size">@Html.ValidationMessageFor(model => model.OpdMedicalRecordMastetId)</span>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.OpdMedicalRecordMastetId)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.OpdMedicalRecordMastetId)

                    </div>

                </label>

            </div>

            <div class="row-fluid singleline">

                <label>

                    <span class="size">@Html.ValidationMessageFor(model => model.CurrentCase)</span>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.CurrentCase)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.CurrentCase)

                    </div>

                </label>

                <label>

                    <span class="size">@Html.ValidationMessageFor(model => model.Remarks)</span>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Remarks)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Remarks)

                    </div>

                </label>

            </div>



            <div style="border: #3c5a86 1px dotted;">
                <div style="position: relative; top: -0.5em; margin-left: 1em; display: inline; background-color:aliceblue; font-size:14px;">Common Test</div>
                @foreach (var item in Model.PatientCommonTestList)
                {
                    <div class="row-fluid singleline">
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.ShortDesc)

                            </div>

                        </label>
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.Details)

                            </div>

                        </label>


                    </div>
                
                }

            </div>

            <div style="border: #3c5a86 1px dotted; margin-top:15px;">
                <div style="position: relative; top: -0.5em; margin-left: 1em; display: inline; background-color:aliceblue; font-size:14px;">Further Test</div>
                @foreach (var item in Model.PatientFurtherTestList)
                {
                    <div class="row-fluid singleline">
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.TestName)

                            </div>

                        </label>
                        

                    </div>
                
                }

            </div>


            <div style="border: #3c5a86 1px dotted; margin-top:15px;">
                <div style="position: relative; top: -0.5em; margin-left: 1em; display: inline; background-color:aliceblue; font-size:14px;">Medicine Refer</div>
                @foreach (var item in Model.PatientMedicineDosesList)
                {
                    <div class="row-fluid singleline">
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.MedicineName)

                            </div>

                        </label>
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.Doses)

                            </div>

                        </label>
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.DosesTime)

                            </div>

                        </label>
                        <label>
                            <div class="editor-label">
                            </div>
                            <div class="editor-field">
                                @Html.TextBox("Name", @item.DosesDay)

                            </div>

                        </label>


                    </div>
                
                }

            </div>



        </fieldset>
    </div>

</div>
