@model HospitalManagementSystem.Models.TodayListViewModel

  <div class="general-box clearfix">
        <div class="general-box clearfix">

            <div class="boxWrapper">
                <div class="boxHeadingPanel">
                    <h1>Patient List</h1>
                </div>

                <table class="table table-hover tablesorter">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PatinetId)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.PatientName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model.todayList)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.PatinetId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientName)

                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @if(item.count<=0)
                                {
                                @Html.ActionLink("write Report", "WriteRecord", new { id = item.PatinetId,date=Model.PrefDate })
                                }
                                @if(item.count>0)
                                {
                                    @Html.ActionLink("Edit Or View Medical Report", "ViewOpdMedicalRecord", new { id = item.PatinetId,docid=Model.DoctorId,deptid=Model.DepartmentId,patientLogId=item.PatientlogId,OpdmedRecmasid=item.OpdMedicalRecordMasterId })
                              @*<span>  @Html.ActionLink("Edit Or View Medical Report", "ViewOpdMedicalRecord", new { id = item.PatinetId,docid=Model.DoctorId,deptid=Model.DepartmentId })</span>*@
                                    @*<span>@Html.ActionLink("Print Report", "OpdMedicalReportPrint", new { id = item.PatinetId,docid=Model.DoctorId,deptid=Model.DepartmentId })</span>*@
                                }
                            </td>
                            
                        </tr>
                    }

                </table>

            </div>
        </div>
        @*for sorting *@

        <div class="boxFooter">

            <div id="pager" style="">
                <form>
                    <img src="@Url.Content("~/Content/images/first.png")" class="first" />
                    <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
                    <input class="pagedisplay" type="text" style="width: 60px; height: 24px;">
                    <img src="@Url.Content("~/Content/images/next.png")" class="next" />
                    <img src="@Url.Content("~/Content/images/last.png")" class="last" />
                    <select class="pagesize valid" style="width: 70px; height: 30px;">
                        <option selected="selected" value="10">10</option>
                        <option value="5">5</option>
                        <option value="20">20</option>
                        <option value="30">30</option>
                        <option value="40">40</option>
                    </select>
                </form>
            </div>

        </div>

        @*---------------*@
    </div>