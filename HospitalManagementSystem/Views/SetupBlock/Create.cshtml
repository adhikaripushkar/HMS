@model Hospital.Models.SetupBlockModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}

<h2 style="text-align:center;">Block Setup</h2>
<div class="contentWrapper">

@using (Html.BeginForm("Create", "SetupBlock", FormMethod.Post, new { @class = "bs-docs-example form-inline" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create</legend>
          <div class="row-fluid singleline">

        <div class="editor-label">
            @Html.HiddenFor(model => model.BlockId)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.BlockId)
            @Html.ValidationMessageFor(model => model.BlockId)
        </div>
<label>
      <span class="size">@Html.ValidationMessageFor(model => model.BlockName)</span>
        <div class="editor-label">
            @Html.LabelFor(model => model.BlockName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BlockName)
        
        </div>
 </label>
 
        <div class="editor-label">
            @Html.HiddenFor(model => model.Status)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status)
        </div>
              </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @id="linkNewBack" })
</div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
