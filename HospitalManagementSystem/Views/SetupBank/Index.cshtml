@model Hospital.Models.SetupBankModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterSetupLayout.cshtml";
}

<h2 style="text-align:center;">Bank Setup</h2>
@if (TempData["success"] == "Record Created Successfully !")
{ 
    <div class="alert alert-success">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Creation Failed !")
{ 
    <div class="alert alert-error">
@TempData["success"]
        </div>

}

@if (TempData["success"] == "Record Updated Successfully !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Updation Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

 

@if (TempData["success"] == "Record Deleted Successfully !")
{ 
    <div class="alert alert-info">
@TempData["success"]
        </div>

}


@if (TempData["success"] == "Record Deletion Failed !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}
@if (TempData["success"] == "Already Exist !")
{ 
    <div class="alert">
@TempData["success"]
        </div>

}

<div class="contentWrapper">

<p>
    @Html.ActionLink("Create New", "Create", null, new { @id="linkNewBack"})
</p>
 <div class="general-box clearfix">
        <div class="general-box clearfix">

       <div class="boxWrapper">
    <div class="boxHeadingPanel"><h1>Setup Bank</h1></div>

<table class="table table-hover tablesorter">
    <thead>
    <tr>
     
            @Html.HiddenFor(model => model.BankSetupId)
      
        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>Action</th>
    </tr>
        </thead>
    <tbody>
@foreach (var item in Model.SetupBankModelList) {
    <tr>
      
            @Html.HiddenFor(modelItem => item.BankSetupId)
      
        <td>
            @Html.DisplayFor(modelItem => item.BankName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BankSetupId }) |
    @*        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
            

            @Html.ActionLink("Delete", "Delete",new { id = item.BankSetupId }, new { onclick = "return confirm('Do you want to delete?');" })
        </td>
    </tr>
}
</tbody>
</table>
           </div>
              <div class="boxFooter">
                   
                   <div id="pager" style="">
