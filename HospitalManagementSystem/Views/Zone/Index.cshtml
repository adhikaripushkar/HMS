 <div class="well" style="border-radius:0;">
              <div class="side-by-side clearfix">
           
            

                  <div class="bottom_btn marginBottom">
                   
        <a href="@Url.Action("Create","Zone")"  class="btn btn-sm btn-success"><i class="fa fa-plus-circle"></i> Add New</a>

       
                    
                  </div>
              
                

                <div class="clearfix"></div>
<div id="divTableDataHolder" class="table-responsive">
<table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
         <th class="width30">S.N.</th>
        <th>
            @Html.DisplayNameFor(model => model.ZoneInEng)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.Zone)
        </th>
        
        <th class="width130">Action</th>

    </tr>
        </thead>

@foreach (var item in Model.ZoneRecordsModelList)
{
    
    <tr>
        <td>@i</td>
        <td>
            @Html.DisplayFor(modelItem => item.ZoneInEng)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Zone)
        </td>
        

      <td class="text-center">
          <div class="btn btn-success btn-xs btn-edit">
          <i class="fa fa-pencil-square-o"></i> @Html.ActionLink("Edit", "Edit", new { id = item.ZoneID })
              </div>
           <div class="btn btn-danger btn-xs btn-delete"><i class="fa fa-trash"></i>
                @Html.ActionLink("Delete", "Delete", new { id = item.ZoneID }, new { onclick = "return confirm('Do you want to delete?')"})</div> 

      </td>

                          
          
    </tr>

    i++;
}

</table>

